{
    "build": {
        "beforeDevCommand": "bun run dev",
        "beforeBuildCommand": "bun run build",
        "devPath": "http://localhost:1420",
        "distDir": "../dist",
        "withGlobalTauri": true
    },
    "package": {
        "productName": "umda_ui",
        "version": "0.0.5"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "fs": {
                "all": true,
                "scope": [
                    "**",
                    "$APPLOCALDATA/**",
                    "$RESOURCE/**"
                ]
            },
            "path": {
                "all": true
            },
            "shell": {
                "all": true,
                "sidecar": true,
                "scope": [
                    {
                        "name": "umdapy",
                        "cmd": "$APPLOCALDATA/umdapy/umdapy",
                        "args": true
                    },
                    {
                        "name": "python",
                        "cmd": "python",
                        "args": true
                    },
                    {
                        "name": "netstat-win32",
                        "cmd": "netstat",
                        "args": true
                    },
                    {
                        "name": "netstat-darwin",
                        "cmd": "lsof",
                        "args": [
                            "-i",
                            {
                                "validator": "\\S+"
                            }
                        ]
                    },
                    {
                        "name": "taskkill-win32",
                        "cmd": "taskkill",
                        "args": [
                            "/PID",
                            {
                                "validator": "\\S+"
                            },
                            "/F"
                        ]
                    },
                    {
                        "name": "taskkill-darwin",
                        "cmd": "kill",
                        "args": [
                            "-9",
                            {
                                "validator": "\\S+"
                            }
                        ]
                    },
                    {
                        "name": "unzip-win32",
                        "cmd": "tar",
                        "args": [
                            "-xf",
                            {
                                "validator": "\\S+"
                            },
                            "-C",
                            {
                                "validator": "\\S+"
                            }
                        ]
                    },
                    {
                        "name": "unzip-darwin",
                        "cmd": "unzip",
                        "args": [
                            {
                                "validator": "\\S+"
                            },
                            "-d",
                            {
                                "validator": "\\S+"
                            }
                        ]
                    }
                ]
            },
            "dialog": {
                "all": true
            },
            "process": {
                "all": false,
                "exit": false,
                "relaunch": true,
                "relaunchDangerousAllowSymlinkMacos": false
            },
            "os": {
                "all": true
            },
            "window": {
                "all": false,
                "close": true
            }
        },
        "bundle": {
            "active": true,
            "targets": "all",
            "identifier": "com.umdaui.dev",
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ]
        },
        "security": {
            "csp": null
        },
        "updater": {
            "active": true,
            "endpoints": [
                "https://umdaui-update-server.aravindhnivas.workers.dev/v1/{{target}}/{{arch}}/{{current_version}}"
            ],
            "dialog": false,
            "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IENGMjlGOUNENzEwMTI5ODcKUldTSEtRRnh6Zmtwei9pallycXRudUlaalBDVzVxSlVwL2Y1T3ByaUptOFlsajNpSUVpdmxYb0oK",
            "windows": {
                "installMode": "passive",
                "installerArgs": [
                    "/S"
                ]
            }
        },
        "windows": [
            {
                "fullscreen": false,
                "resizable": true,
                "title": "UMDA UI",
                "width": 1200,
                "height": 800,
                "minWidth": 800,
                "minHeight": 600
            }
        ]
    }
}