{
    "compilerOptions": {
        "composite": true,
        // "skipLibCheck": true,
        "module": "ESNext",
        // "moduleResolution": "bundler",
        // Bundler mode
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "verbatimModuleSyntax": true,
        "noEmit": true,
        // Best practices
        "strict": true,
        "skipLibCheck": true,
        "noFallthroughCasesInSwitch": true,
        // Some stricter flags
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noPropertyAccessFromIndexSignature": true,
    },
    "include": [
        "vite.config.ts"
    ]
}